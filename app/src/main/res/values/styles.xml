<resources>

    <!-- Base application theme. -->

    <style name="Theme.MyFancyTheme" parent="android:Theme.Holo">
        <item name="android:homeAsUpIndicator">@drawable/ic_arrow_back_white_24dp</item>
    </style>

    <style name="CalendarWidgetHeader">
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/open_sans_bold</item>
        <item name="android:textColor">@color/textBlue</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="CalendarWidgetWeekDays">
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">@font/open_sans_bold</item>
        <item name="android:textColor">@color/textBlue</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="CalendarWidgetNumberDays">
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/open_sans_regular</item>
        <item name="android:textColor">@color/darkGrey</item>
        <item name="android:textAllCaps">true</item>
    </style>


</resources>
