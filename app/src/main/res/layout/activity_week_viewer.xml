<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.calendar.WeekViewer">

    <androidx.appcompat.widget.Toolbar
            android:id="@+id/my_toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/lightGreen"
            android:elevation="4dp"
            android:theme="@style/Theme.MyFancyTheme"
            app:layout_constraintTop_toTopOf="parent"
            app:menu="@menu/day_viewer_menu"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light" >

        <ImageView
                android:id="@+id/backBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_triangle_back_white_24dp"
                android:layout_gravity="start"
                android:layout_marginStart="20dp"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="WEEK VIEW"
                android:textColor="@color/white"
                android:fontFamily="@font/open_sans_bold"
                android:textSize="22sp"
                android:layout_gravity="center"
                android:id="@+id/toolbar_title" />

    </androidx.appcompat.widget.Toolbar>

    <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="16dp"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/my_toolbar">

        <TextView
                android:id="@+id/monday_btn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="@color/lightGrey"
                android:fontFamily="@font/open_sans_bold"
                android:gravity="center"
                android:paddingStart="16dp"
                android:paddingTop="8dp"
                android:paddingEnd="8dp"
                android:paddingBottom="8dp"
                android:text="M"
                android:textSize="20sp" />

        <TextView
                android:id="@+id/tuesday_btn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="@color/lightGrey"
                android:fontFamily="@font/open_sans_bold"
                android:gravity="center"
                android:padding="8dp"
                android:text="T"
                android:textSize="20sp" />

        <TextView
                android:id="@+id/wednesday_btn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="@color/lightGrey"
                android:fontFamily="@font/open_sans_bold"
                android:gravity="center"
                android:padding="8dp"
                android:text="W"
                android:textSize="20sp" />

        <TextView
                android:id="@+id/thursday_btn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="@color/lightGrey"
                android:fontFamily="@font/open_sans_bold"
                android:gravity="center"
                android:padding="8dp"
                android:text="T"
                android:textSize="20sp" />

        <TextView
                android:id="@+id/friday_btn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="@color/lightGrey"
                android:fontFamily="@font/open_sans_bold"
                android:gravity="center"
                android:padding="8dp"
                android:text="F"
                android:textSize="20sp" />

        <TextView
                android:id="@+id/saturday_btn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="@color/lightGrey"
                android:fontFamily="@font/open_sans_bold"
                android:gravity="center"
                android:padding="8dp"
                android:text="S"
                android:textSize="20sp" />

        <TextView
                android:id="@+id/sunday_btn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="@color/lightGrey"
                android:fontFamily="@font/open_sans_bold"
                android:gravity="center"
                android:paddingStart="8dp"
                android:paddingTop="8dp"
                android:paddingEnd="16dp"
                android:paddingBottom="8dp"
                android:text="S"
                android:textSize="20sp" />

    </LinearLayout>

    <View
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="8dp"
            android:background="@color/lightGrey"
            app:layout_constraintBottom_toTopOf="@+id/pager"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout" />

